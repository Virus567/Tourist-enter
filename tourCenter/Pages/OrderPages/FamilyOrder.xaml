<Page x:Class="tourCenter.FamilyOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:tourCenter"
      mc:Ignorable="d" 
	   xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	  xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FamilyApp">

	<Grid Background="#ffdadada">

		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" FontSize="16"
				 materialDesign:HintAssist.Hint="ФИО" Padding="0 10 0 0" Background="#ffdadada"    Cursor="IBeam" />
		<Label  Margin="0 8 0 0" Grid.Column="7" Grid.Row="1" Grid.ColumnSpan="3" Content="Номер телефона:"  Foreground="Gray" FontSize="16" />
		<Border  Background="Gray" Margin="5 8 0 0" Grid.Column="10" Grid.ColumnSpan="3" Grid.Row="1" MaxHeight="30">
			<TextBox x:Name="numberPhone" materialDesign:HintAssist.Hint="+7" Background="#ffdadada" Padding="0 0 0 5" FontSize="16" Margin="0 0.5 0.5 0"
				PreviewTextInput="numberPhone_PreviewTextInput" PreviewKeyDown="numberPhone_PreviewKeyDown"  TextAlignment="Left" Cursor="IBeam" GotFocus="numberPhone_GotFocus"/>
		</Border>
		<Label Content="Кол-во человек:" Grid.Column="13" Grid.Row="1" Grid.ColumnSpan="3" Margin="30 8 0 0" Foreground="Gray" FontSize="16" />
		<Border Background="Gray" Grid.Column="16" Grid.Row="1" MaxHeight="30"  Margin="0 5 0 0" >
			<mah:NumericUpDown x:Name="peopleAmount"  Background="#ffdadada" FontSize="16" Margin="0 0 1 0"
							   UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" />
		</Border>
		<Label Content="Кол-во детей:" Grid.Column="17" Grid.Row="1" Grid.ColumnSpan="3" Margin="50 8 0 0" Foreground="Gray" FontSize="16" />
		<Border Background="Gray" MaxHeight="30" Grid.Column="20" Grid.Row="1" Margin="0 5 0 0" >
			<mah:NumericUpDown x:Name="childrenAmount"  Background="#ffdadada" FontSize="14" Margin="0 0 1 0"
							UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" />
		</Border>
		<ComboBox x:Name="CmBoxRoutes"  materialDesign:HintAssist.Hint="Выберите Маршрут" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="5"  
				   Background="#ffdadada" MaxHeight="27" FontSize="16" Padding="0 0 3 0" LostMouseCapture="CmBoxRoutes_LostMouseCapture"/>
		<Label Grid.Row="5" Grid.Column="7" Content="Даты:" Margin="0 5 0 0" Foreground="Gray" FontSize="16" />

		<DatePicker x:Name="StartDate" Grid.Row="5" Grid.Column="8" Grid.ColumnSpan="3" materialDesign:HintAssist.Hint="Дата начала" 
					CalendarClosed="StartDate_CalendarClosed" Margin="5 0 0 2" FontSize="16" SelectedDateFormat="Short"/>

		<Label   Grid.Row="5" Grid.Column="11" Content="—"  Foreground="Gray" FontSize="16" Margin="15 5 0 0" />

		<DatePicker x:Name="FinishDate" Grid.Row="5" Grid.Column="12" Grid.ColumnSpan="3" Margin="0 0 0 2" materialDesign:HintAssist.Hint="Дата окончания"  
					FontSize="16" SelectedDateFormat="Short"/>

		<ComboBox Grid.Row="5" Grid.Column="16" Grid.ColumnSpan="5" Padding="0 0 3 0" materialDesign:HintAssist.Hint="Cпособ передвижения" 
				  FontSize="16" x:Name="CmBoxWayToTravel" Background="#ffdadada"  MaxHeight="27" LostMouseCapture="CmBoxWayToTravel_LostMouseCapture">
			<ComboBoxItem Content="Байдарки"/>
			<ComboBoxItem Content="Рафты"/>
			<ComboBoxItem Content="Способ передвижения"/>
		</ComboBox>

		<Label Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="5" Content="Особенности питания:" FontSize="16" Foreground="DimGray"/>

		<CheckBox Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3" x:Name="CheckMeat" Foreground ="DimGray"  
				  Background="Teal" FontFamily="Segoe UI" FontSize="16" >Вегетарианцы</CheckBox>

		<CheckBox Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="3" x:Name="CheckSugar" Foreground ="DimGray" 
				  Background="Teal" FontFamily="Segoe UI" FontSize="16" >Диабетики</CheckBox>

		<TextBox  AcceptsReturn="True" Grid.Row="14" Grid.Column="1" Grid.ColumnSpan="5" BorderThickness="1" 
				  BorderBrush="DimGray" Padding="2" TextWrapping ="Wrap"  Grid.RowSpan="4"  
				  materialDesign:HintAssist.Hint="Аллергии и т.п." FontSize="16"/>

		<Label Grid.Row="9" Grid.Column="7" Grid.ColumnSpan="5"  Content="Особенности снаряжения:" 
			   FontSize="16" Foreground="DimGray"/>

		<Label Content="Кол-во индивидуальных палаток:" Grid.Column="7" Grid.Row="11" Grid.ColumnSpan="5" 
			   Margin="0 8 0 0" Foreground="DimGray" FontSize="16" />
		<Border Background="Gray" Grid.Column="14" Grid.Row="11" MaxHeight="30"  Margin="0 5 0 0" >
			<mah:NumericUpDown x:Name="persTentAmount"  Background="#ffdadada" FontSize="16" Margin="0 1 1 0"
							   UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" />
		</Border>

		<Label Content="Кол-во индивидуальных гермомешоков:" Grid.Column="7" Grid.Row="10" Grid.ColumnSpan="6"
			   Margin="0 8 0 0" Foreground="DimGray" FontSize="16" />
		<Border Background="Gray" Grid.Column="14" Grid.Row="10"  MaxHeight="30"  Margin="0 5 0 0" >
			<mah:NumericUpDown x:Name="persHermeticBagAmount"  Background="#ffdadada" FontSize="16" Margin="0 1 1 0"
							   UpDownButtonsWidth="0" ButtonsAlignment="Left" TextAlignment="Left" />
		</Border>

		<TextBox  AcceptsReturn="True" Grid.Row="14" Grid.Column="7" Grid.ColumnSpan="8" 
				  BorderThickness="1" BorderBrush="DimGray" Padding="2" TextWrapping ="Wrap"  Grid.RowSpan="4"  
				  materialDesign:HintAssist.Hint="Примечание" FontSize="16"/>

		<TextBox x:Name="txtBoxFileName" Grid.Row="14" Grid.Column="16" Grid.ColumnSpan="5" Margin="20 6 10 3" IsReadOnly="True" 
				 materialDesign:HintAssist.Hint="Добавьте список участников..." FontSize="16"/>
		<Button Grid.Row="14" Grid.Column="21" Grid.ColumnSpan="2" Content="Обзор"  HorizontalAlignment="Left" 
                x:Name="BrowseBtn"   Click="BrowseBtn_Click" Background="Teal" Cursor="Hand" />
		<Button Grid.Column="16" Grid.Row="16" Grid.ColumnSpan="7" Margin="20 0 37 0" Background="Teal" Content="Оформить заявку"/>
	</Grid>
</Page>
