<Window x:Class="tourCenter.Instrucors"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tourCenter"
        mc:Ignorable="d"
        Title="Инструкторы:" Height="450" Width="350" MaxHeight="450" MaxWidth="350" MinWidth="350" MinHeight="450" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="/Window/icon.ico">
    <Grid Background="#ffdadada">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBlock x:Name="tb1"  Text="Выберите инструкторов для этого похода:" FontSize="16"/>
		<ListBox x:Name="InstrucorsList" Grid.Row="1" Grid.RowSpan="10" ItemsSource="{Binding Collection}" SelectionMode="Single" BorderBrush="Transparent">
			
		</ListBox>
		<Button x:Name="SaveChangesBtn" Grid.Row="11" Grid.RowSpan="2" Content="Сохранить изменения" Margin="10 2 10 2" Cursor="Hand" Click="SaveChangesBtn_Click"/>
	</Grid>
</Window>
